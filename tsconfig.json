{
    "compilerOptions": {
        "outDir": "./dist",
        "lib": [
          "ES2015",
          "ES2016",
          "dom"
        ],
        "sourceMap": true,
        "noImplicitAny": true,
        "target": "es5",
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "baseUrl": "src",
        "paths": {
            "src/*": [
                "*"
            ]
        },
        "exclude": [
            "node_modules"
        ]
    }
}